			<MenuItem Header="Next round"></MenuItem>
			<MenuItem Header="Settings"></MenuItem>
		</Menu>
		<Grid Grid.Row="1" Name="gridTestDetails">
			<Grid.ColumnDefinitions>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
			</Grid.RowDefinitions>
			<!--<TextBlock x:Name="nameTextBlock" Grid.Column="0" Text="{Binding Source={StaticResource testUser}, Path=Name}"/>
			<TextBlock x:Name="ageTextBlock" Grid.Column="1" Text="{Binding Source={StaticResource testUser}, Path=Age}"/>
			<Button Grid.Row="1" Click="Button_Click">Change</Button>-->
			<DataGrid DataContext="{Binding Source={}}">
				
			</DataGrid>
		</Grid>
    </Grid>
</UserControl>
